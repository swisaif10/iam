<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:includeFontPadding="false"
                android:text="@string/personal_info_title"
                android:textColor="@color/blue"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginTop="30dp"
                android:background="@drawable/white_background"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:fontFamily="@font/montserrat_semibold"
                        android:includeFontPadding="false"
                        android:text="@string/last_name_label"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.6"
                        android:background="@drawable/editext_border"
                        android:fontFamily="@font/montserrat_semibold"
                        android:hint="@string/last_name_hint"
                        android:paddingStart="20dp"
                        android:text="Test"
                        android:textColorHint="@color/lightGrey"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:fontFamily="@font/montserrat_semibold"
                        android:includeFontPadding="false"
                        android:text="@string/first_name_label"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.6"
                        android:background="@drawable/editext_border"
                        android:fontFamily="@font/montserrat_semibold"
                        android:hint="@string/first_name_hint"
                        android:paddingStart="20dp"
                        android:text="Test"
                        android:textColorHint="@color/lightGrey"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:fontFamily="@font/montserrat_semibold"
                        android:includeFontPadding="false"
                        android:text="@string/email_label"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.6"
                        android:background="@drawable/editext_border"
                        android:fontFamily="@font/montserrat_semibold"
                        android:hint="@string/email_hint"
                        android:inputType="textEmailAddress"
                        android:paddingStart="20dp"
                        android:text="test@test.com"
                        android:textColorHint="@color/lightGrey"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:fontFamily="@font/montserrat_semibold"
                        android:includeFontPadding="false"
                        android:text="@string/phone_label"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.6"
                        android:background="@drawable/editext_border"
                        android:fontFamily="@font/montserrat_semibold"
                        android:hint="@string/phone_hint"
                        android:inputType="phone"
                        android:paddingStart="20dp"
                        android:text="06 55 55 66 44"
                        android:textColorHint="@color/lightGrey"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:fontFamily="@font/montserrat_semibold"
                        android:includeFontPadding="false"
                        android:text="@string/sector_label"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.6"
                        android:background="@drawable/editext_border"
                        android:fontFamily="@font/montserrat_semibold"
                        android:hint="@string/sector_hint"
                        android:paddingStart="20dp"
                        android:textColorHint="@color/lightGrey"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:fontFamily="@font/montserrat_semibold"
                        android:includeFontPadding="false"
                        android:text="@string/city_label"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.6"
                        android:background="@drawable/editext_border"
                        android:fontFamily="@font/montserrat_semibold"
                        android:hint="@string/city_hint"
                        android:paddingStart="20dp"
                        android:text="Test"
                        android:textColorHint="@color/lightGrey"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.4"
                        android:fontFamily="@font/montserrat_semibold"
                        android:includeFontPadding="false"
                        android:text="@string/password_label"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/editext_border"
                            android:fontFamily="@font/montserrat_semibold"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:inputType="textPassword"
                            android:paddingStart="20dp"
                            android:text="Test"
                            android:textColor="@color/black"
                            android:textColorHint="@color/lightGrey"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/updatePasswordBtn"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_edit"
                            app:tint="@color/blue" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:fontFamily="@font/montserrat_semibold"
                        android:includeFontPadding="false"
                        android:text="@string/profession_label"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.6"
                        android:background="@drawable/editext_border"
                        android:fontFamily="@font/montserrat_semibold"
                        android:hint="@string/profession_hint"
                        android:paddingStart="20dp"
                        android:text="Test"
                        android:textColorHint="@color/lightGrey"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:fontFamily="@font/montserrat_semibold"
                        android:includeFontPadding="false"
                        android:text="@string/address_label"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.6"
                        android:background="@drawable/editext_border"
                        android:fontFamily="@font/montserrat_semibold"
                        android:hint="@string/address_hint"
                        android:paddingStart="20dp"
                        android:text="Test test"
                        android:textColorHint="@color/lightGrey"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:fontFamily="@font/montserrat_semibold"
                        android:includeFontPadding="false"
                        android:text="@string/cin_label"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.6"
                        android:background="@drawable/editext_border"
                        android:fontFamily="@font/montserrat_semibold"
                        android:paddingStart="20dp"
                        android:text="GF654899"
                        android:textColorHint="@color/lightGrey"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.4"
                        android:fontFamily="@font/montserrat_semibold"
                        android:includeFontPadding="false"
                        android:text="@string/civility_hint"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/womenBtn"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:buttonTint="@color/orange"
                            android:fontFamily="@font/montserrat_semibold"
                            android:layoutDirection="rtl"
                            android:text="@string/women_hint"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <Space
                            android:layout_width="30dp"
                            android:layout_height="wrap_content" />

                        <RadioButton
                            android:id="@+id/menBtn"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="20dp"
                            android:buttonTint="@color/orange"
                            android:fontFamily="@font/montserrat_semibold"
                            android:layoutDirection="rtl"
                            android:text="@string/men_hint"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/loader"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@mipmap/loader"
                android:visibility="gone" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</layout>