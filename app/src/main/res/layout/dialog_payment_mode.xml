<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AA000000">

    <RelativeLayout
        android:id="@+id/layoutModePayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/white_background"
        android:orientation="horizontal"
        android:padding="20dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/modePaymentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:includeFontPadding="false"
                android:text="@string/mode_payment_label"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="20dp">

                <RadioButton
                    android:id="@+id/radio0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/radio_on"
                    android:buttonTint="@color/radio_tint"
                    android:drawableLeft="@drawable/carte_bancaire"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:layoutDirection="rtl"
                    android:padding="15dp"
                    android:paddingLeft="10dp"
                    android:text="@string/card_bank_label"
                    android:textSize="16sp"
                    android:visibility="visible"
                    app:cornerRadius="5dp" />

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/radio_off"
                    android:buttonTint="@color/radio_tint"
                    android:drawableLeft="@drawable/ic_payment_mobile"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:layoutDirection="rtl"
                    android:padding="15dp"
                    android:paddingLeft="10dp"
                    android:text="@string/app_mobile_label"
                    android:textSize="16sp"
                    android:visibility="visible"
                    app:cornerRadius="5dp" />

                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/radio_off"
                    android:buttonTint="@color/radio_tint"
                    android:drawableStart="@drawable/ic_mtcash"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:layoutDirection="rtl"
                    android:padding="15dp"
                    android:paddingStart="10dp"
                    android:text="@string/mtcash_label"
                    android:textSize="16sp"
                    android:visibility="visible"
                    app:cornerRadius="5dp" />
            </RadioGroup>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/confirmBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="70dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/button_selector"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/confirm_btn_label"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>